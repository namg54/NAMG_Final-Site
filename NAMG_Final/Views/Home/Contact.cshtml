                        <div class="col-md-6 form-group mt-3 mt-md-0">
                            <input asp-for="email" type="email" class="form-control"  id="email" placeholder="ایمیل" required="">
                        </div>
                    </div>
                    <div class="form-group mt-3">
                        <input asp-for="subject" type="text" class="form-control"  id="subject" placeholder="عنوان" required="">
                    </div>
                    <div class="form-group mt-3">
                        <textarea asp-for="message" class="form-control"  rows="5" placeholder="پیام" required=""></textarea>
                    </div>
